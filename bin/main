#!/usr/bin/env ruby
require_relative '../lib/check_game_result'
require_relative '../lib/start_game'
require_relative '../lib/check_invalid'
class TicTacToe
  attr_reader :board

  def initialize
    @board = ['', '', '', '', '', '', '', '', '']
  end

  def board_interface
    puts "#{@board[0]} | #{@board[1]}  | #{@board[2]}"
    puts '________'
    puts "#{@board[3]} | #{@board[4]}  | #{@board[5]}"
    puts '________'
    puts "#{@board[6]} | #{@board[7]}  | #{@board[8]}"
  end

  def winer
    check_game_result = CheckGameResult.new(@board)
    check_game_result.win
  end

  def player_input
    @player_number = gets.chomp.to_i
  end
  include StartGame
  include CheckInvalid
end

game = TicTacToe.new
p game.start_game
