#!/usr/bin/env ruby
class TicTacToeGame
  attr_accessor :board

  def initialize
    @board = ['', '', '', '', '', '', '', '', '']
  end

  def board_interface
    puts "#{@board[0]} || #{@board[1]}  || #{@board[2]}"
    puts "#{@board[3]} || #{@board[4]}  || #{@board[5]}"
    puts "#{@board[6]} || #{@board[7]}  || #{@board[8]}"
  end

  def check_number
    if (1..9).cover?(@player_number)
      if @player_number.odd?
        @board[@player_number - 1] = 'X'
        puts 'player one played time for player two'
      else
        @board[@player_number - 1] = 'O'
        puts 'player two played time for player one'
      end
    else
      puts 'please add number between 1 to 9'
    end
  end

  def start_game
    puts 'Type number from 1 to 9'
    puts 'Choice odd number for "X" and even number for "O"'
    @available = (1..9).to_a
    @unavailable = []
    @board.each do
      # get the user input
      @player_number = gets.chomp.to_i
      @unavailable << @player_number
      p "these available numbers for next player #{@available - @unavailable}"
      # check if the player input is valid
      check_number
      p invalid
      p board_interface
    end
  end

  def invalid
    # Check InValid For unavailable
  end
end
game = TicTacToeGame.new

game.start_game
